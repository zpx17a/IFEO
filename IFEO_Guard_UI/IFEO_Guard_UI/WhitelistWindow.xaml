<Window x:Class="IFEO_Guard_UI.WhitelistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="白名单管理" Height="400" Width="600" Icon="/rainbow.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtContent" Grid.Row="0" Margin="5" 
                 AcceptsReturn="True" TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="保存" Width="80" Margin="5" Click="BtnSave_Click"/>
            <Button Content="退出" Width="80" Margin="5" Click="BtnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>